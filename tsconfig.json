{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "typeRoots": [ "./types", "./node_modules/@types"],
    "target": "es2018",
    "lib": ["es2018"],
    "esModuleInterop": true,
    "module": "commonjs",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  }
}
